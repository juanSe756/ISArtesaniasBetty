<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.artesaniasbetty.model.Producto" table="productos">

        <id name="id" type="integer">
            <column name="id_prod" />
            <generator class="native" />
        </id>

        <property name="nombre" type="string">
            <column name="nom_prod" />
        </property>

        <property name="desc" type="string">
            <column name="descrip_prod" />
        </property>
        <property name="stock" type="int">
            <column name="stock" />
        </property>
        <property name="categoria" type="com.artesaniasbetty.model.Categoria">
            <column name="id_categ" />
        </property>
    </class>
    <class name="com.artesaniasbetty.model.Categoria" table="categorias">

        <id name="id" type="integer">
            <column name="id_categ" />
            <generator class="native" />
        </id>

        <property name="nombre" type="string">
            <column name="nom_categ" />
        </property>

        <property name="desc" type="string">
            <column name="descrip_categ" />
        </property>
    </class>
</hibernate-mapping>